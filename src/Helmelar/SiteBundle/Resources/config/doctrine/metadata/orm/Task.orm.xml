<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Task" table="TASK">
    <id name="taskId" type="integer" column="TASK_ID">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="taskName" type="string" column="TASK_NAME" length="255" nullable="false"/>
    <field name="taskDescription" type="text" column="TASK_DESCRIPTION" nullable="false"/>
    <field name="taskType" type="boolean" column="TASK_TYPE" nullable="false"/>
    <field name="taskPriority" type="boolean" column="TASK_PRIORITY" nullable="false"/>
    <field name="senderOrganisatorId" type="integer" column="SENDER_ORGANISATOR_ID" nullable="false"/>
    <field name="receiverOrganisatorId" type="integer" column="RECEIVER_ORGANISATOR_ID" nullable="false"/>
    <field name="taskStatus" type="boolean" column="TASK_STATUS" nullable="false"/>
    <field name="taskLockStatus" type="boolean" column="TASK_LOCK_STATUS" nullable="false"/>
    <field name="taskPrctComplete" type="boolean" column="TASK_PRCT_COMPLETE" nullable="false"/>
    <field name="taskTimeEstimated" type="float" column="TASK_TIME_ESTIMATED" nullable="false"/>
    <field name="taskTimeCompleted" type="float" column="TASK_TIME_COMPLETED" nullable="false"/>
    <field name="taskNote" type="text" column="TASK_NOTE" nullable="false"/>
    <field name="taskDateCreated" type="date" column="TASK_DATE_CREATED" nullable="false"/>
    <field name="taskDateAccepted" type="date" column="TASK_DATE_ACCEPTED" nullable="false"/>
    <field name="taskDateCompleted" type="date" column="TASK_DATE_COMPLETED" nullable="false"/>
    <field name="taskTimestamp" type="datetime" column="TASK_TIMESTAMP" nullable="false"/>
    <field name="taskDateDeadline" type="date" column="TASK_DATE_DEADLINE" nullable="false"/>
    <field name="taskComments" type="text" column="TASK_COMMENTS" nullable="false"/>
    <field name="taskOrder" type="integer" column="TASK_ORDER" nullable="false"/>
  </entity>
</doctrine-mapping>
